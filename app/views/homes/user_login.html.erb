<div class="form" style="max-width: 400px;" >
    <%= form_with(url: users_login_path, method: :post, local: true) do |f| %>
        <h1 class="h3 mb-3 fw-normal text-center">ログイン画面</h1>
        
        <div class="form-floating">
            <%= f.email_field :email, class: "form-control", id: "floatingInput" %>
            <label for="floatingInput">メールアドレス</label>
        </div>
        <div class="form-floating">
            <%= f.password_field :password, class: "form-control", id: "floatingPassword" %>
            <label for="floatingPassword">パスワード</label>
        </div>
        <%= f.submit "ログイン", class: "w-100 btn btn-lg btn-primary my-4" %>
    <% end %>
</div>
<div class="p-5"style="text-align: right;">
    <%= link_to "新規登録", new_user_path, style: "text-decoration: none;" %>
</div>
