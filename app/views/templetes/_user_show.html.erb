<h1>ユーザー詳細</h1>
<P>アバター画像</P>
<% if user.avatar_image.present? %>
    <%= image_tag user.avatar_image.url, class:"img-fluid circle", alt: "画像が表示できません", size: "300x300" %>
<% else %>
    <%= image_tag "no_image.jpg", class:"", alt: "画像が表示できません", size: "300x300" %>
<% end %>
<p>名前</p>
<p><%= user.name %></p>
<span><%= user.follow.count %> <%= link_to "フォロー", users_path(follow_or_follower: "follow") %></span>
<span><%= user.follower.count %> <%= link_to "フォロワー", users_path(follow_or_follower: "follower") %></span>
<p><%= link_to "編集", edit_user_path(1), class: "btn btn-primary" %></p>
<%= link_to "ログアウト", users_logout_path, method: :post, class: "btn btn-danger" %> 